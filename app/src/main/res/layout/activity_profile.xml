<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".Profile"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:src="@drawable/back_button"
                android:background="@null"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/love"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/like_button"
                android:background="@null"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/propic"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/account_image"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/propic"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif"
        android:text="Jacklin Silva"
        android:textColor="?attr/textNameColor"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="22sp" />
    <TextView
        android:id="@+id/profession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Android Developer"
        android:textColor="?attr/textNameColor"
        android:layout_centerHorizontal="true"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profession"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="Android is my Passion"
        android:textColor="?attr/textNameColor"
        android:layout_centerHorizontal="true"
        android:textSize="13sp" />
    <Button
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/about"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:background="?attr/textNameColor"
        android:text="Like"
        android:textStyle="bold"
        android:textColor="#fff"/>
    <Button
        android:id="@+id/reject"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/about"
        android:layout_toRightOf="@+id/like"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="24dp"
        android:background="?attr/textNameColor"
        android:text="Reject"
        android:textStyle="bold"
        android:textColor="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/like"
        android:layout_marginTop="30dp"
        android:background="@null">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lleft"
        android:orientation="vertical"
        android:background="@null"
        android:layout_marginLeft="75dp"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardElevation="25dp"
            app:cardBackgroundColor="#7f00ff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Libra"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimary" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#7f00ff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="16 Oct 1999"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/colorPrimary" />

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#7f00ff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Non Veg"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#fff" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lright"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:layout_centerHorizontal="true">

            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#7f00ff"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HipHop"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorPrimary" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#7f00ff"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hollywood"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorPrimary" />

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="#7f00ff"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Beach"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#fff" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="595dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/insta"
        android:onClick="insta"
        android:src="@drawable/instagram"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="75dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:background="?attr/textNameColor"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/twitter"
        android:src="@drawable/follow"
        android:layout_marginTop="620dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="165dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:background="?attr/textNameColor"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/fb"
        android:src="@drawable/facebook"
        android:layout_marginTop="620dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:background="?attr/textNameColor"/>


</RelativeLayout>